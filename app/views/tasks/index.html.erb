<h1>Tasks</h1>

<% @tasks.each do |task| %>
  <p>
  <% if task.completed %>
    <input type="checkbox" checked>
  <% else %>
    <input type="checkbox">
  <% end %>
  <%= link_to task.title, task_path(task.id) %>
  <%= link_to "Edit", edit_task_path(task.id) %>
  <%= link_to "Delete", task_path(task.id), data: {turbo_method: :delete, turbo_confirmation: "EstÃ¡s seguro que quieres continuar?"} %>
  </p>
<% end %>
<%= link_to "Add a new task", new_task_path %>
